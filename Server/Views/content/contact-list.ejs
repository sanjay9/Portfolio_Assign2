<div class="container">
    

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Update/Delete</th>
                        
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].Name %></td>
                            <td><%= contacts[count].Number %></td>
                            <td><%= contacts[count].Email %></td>  

                            <td><a href="/updateview/<%= contacts[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                               
                                    <a href="/contact-list/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                                
                            </td>
                            
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>