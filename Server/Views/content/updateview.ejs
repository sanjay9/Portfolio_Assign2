<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name of Contact</label>
                    <input type="text" class="form-control"
                    id="name"
                    
                    name="name" 
                    value="<%= contacts.Name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="number">Phone Number</label>
                    <input type="tel" class="form-control"
                    id="number"
                    
                    name="number" 
                    value="<%= contacts.Number %>"
                    required>
                </div>

                
                <div class="form-group">
                    <label for="emailAddr">Enter Email</label>
                    <input type=" text" class="form-control"
                    id="emailAddr"
                    
                    name="emailAddr" 
                    value="<%= contacts.Email %>"
                    required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list/delete/<%= contacts._id %>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete</a>

                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

